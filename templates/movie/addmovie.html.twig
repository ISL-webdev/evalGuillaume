{% extends 'base.html.twig' %}

{% block title %}The Movie Storehouse - Add{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron jumbotron-fluid text-center">
            <h1>Add a Movie in the Storehouse</h1>
            <p>A particular movie you want to add</p>
        </div>
        <div class="jumbotron jumbotron-fluid">
        <h2></h2>
            <form class="container-lg">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Movie Title</label>
                    <input type="text" class="form-control" id="title" placeholder="The Lord of the Rings">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Select Genre</label>
                    <select class="form-control" id="genre">
                        <option>Action</option>
                        <option>Comedy</option>
                        <option>SciFi</option>
                        <option>Drama</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Major Actor</label>
                    <input type="text" class="form-control" id="actor" placeholder="In your opinion, who is the best actor on this movie">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Describe the movie</label>
                    <textarea class="form-control" id="description" rows="3"></textarea>
                    <button type="submit" class="btn btn-primary">Submit your movie</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
